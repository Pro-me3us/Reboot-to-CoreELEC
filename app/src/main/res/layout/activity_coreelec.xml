<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="@drawable/coreelec"
        android:contentDescription="@null" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/app_name"
        android:textColor="#ECECEC"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/ip"
        android:textColor="#ECECEC"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnReboot"
            android:layout_width="270dp"
            android:layout_height="match_parent"
            android:background="@drawable/button_background"
            android:text="@string/reboot_to_coreelec"
            android:textAllCaps="true"
            android:textColor="#ECECEC" />

        <ImageButton
            android:id="@+id/btnRebootInfo"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/button_background"
            android:contentDescription="@null"
            android:src="@drawable/ic_info_24" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnRebootUpdate"
            android:layout_width="270dp"
            android:layout_height="match_parent"
            android:background="@drawable/button_background"
            android:text="@string/first_reboot_to_coreelec"
            android:textAllCaps="true"
            android:textColor="#ECECEC" />

        <ImageButton
            android:id="@+id/btnRebootUpdateInfo"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/button_background"
            android:contentDescription="@null"
            android:src="@drawable/ic_info_24" />

    </LinearLayout>

</LinearLayout>
